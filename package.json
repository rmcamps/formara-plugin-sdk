{
  "name": "@formara/plugin-sdk",
  "version": "1.0.2",
  "type": "module",
  "description": "SDK para desarrollo de plugins de Formara",
  "engines": {
    "node": "20.x",
    "npm": ">=10.0.0"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/rmcamps/formara-plugin-sdk.git"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": "./dist/index.js",
    "./ui": "./dist/ui/index.js",
    "./utils/vite-config": "./dist/utils/vite-config.js",
    "./utils/tailwind-config": "./dist/utils/tailwind-config.js",
    "./sandbox/frontend": "./dist/sandbox/frontend/DevApp.js",
    "./sandbox/frontend/mockup-loader": "./dist/sandbox/frontend/mockup-loader.js",
    "./sandbox/frontend/auth-adapter": "./dist/sandbox/frontend/auth-adapter.js",
    "./sandbox/frontend/api-adapter": "./dist/sandbox/frontend/api-adapter.js",
    "./sandbox/backend/dev-server": "./dist/sandbox/backend/dev-server.js",
    "./sandbox/backend/prisma-adapter": "./dist/sandbox/backend/prisma-adapter.js",
    "./contracts/frontend": "./dist/contracts/frontend/index.js",
    "./contracts/backend": "./dist/contracts/backend/index.js",
    "./sdk-styles.css": "./dist/sdk-styles.css"
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsc && npm run copy-contracts && npm run build:tailwind",
    "copy-contracts": "node scripts/copy-contracts.mjs",
    "build:tailwind": "node scripts/build-tailwind.mjs",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "formara",
    "plugin",
    "sdk"
  ],
  "author": "Formara",
  "license": "MIT",
  "dependencies": {
    "zod": "^4.1.12",
    "@radix-ui/react-tabs": "^1.1.9",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-checkbox": "^1.3.3",
    "lucide-react": "^0.469.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "typescript": "^5.0.0",
    "vite": "^6.3.5",
    "@tailwindcss/cli": "^4.1.17",
    "@tailwindcss/postcss": "^4.1.17",
    "tailwindcss": "^4.1.13"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0",
    "express": "^4.18.0 || ^5.0.0",
    "cors": "^2.8.5"
  }
}
