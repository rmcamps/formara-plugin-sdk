{
  "name": "@formara/plugin-sdk",
  "version": "1.0.0",
  "type": "module",
  "description": "SDK para desarrollo de plugins de Formara",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/rmcamps/formara-plugin-sdk.git"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": "./dist/index.js",
    "./ui": "./dist/ui/index.js",
    "./utils/vite-config": "./dist/utils/vite-config.js",
    "./sandbox/frontend": "./dist/sandbox/frontend/DevApp.js",
    "./sandbox/frontend/mockup-loader": "./dist/sandbox/frontend/mockup-loader.js",
